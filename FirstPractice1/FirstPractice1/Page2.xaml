<Page x:Class="FirstPractice1.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FirstPractice1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">
    <Grid>
        <DataGrid x:Name="Books" IsReadOnly="True"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button x:Name="ViborButton" Content="Выбор" Margin="5" Click="Check_Click"/>
            <TextBox x:Name="Search" Text="Введите желаемую фильтрацию"/>
            <Button x:Name="ChangeButton" Content="Очистить" Margin="5" Click="Filtr_Click"/>
            <ComboBox x:Name="ComboBxB" SelectionChanged="ComboBxB_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Page>
