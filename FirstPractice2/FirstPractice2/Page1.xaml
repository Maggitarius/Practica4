<Page x:Class="FirstPractice1.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FirstPractice1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    <Grid>
        <DataGrid x:Name="Authors" IsReadOnly="True"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button x:Name="ViborButton" Content="Выбор" Margin="5" Click="Check_Click"/>
            <TextBox x:Name="Search" Text="Введите имя"/>
            <Button x:Name="ChangeButton" Content="Очистить" Margin="5" Click="Filtr_Click"/>
            <ComboBox DisplayMemberPath="AuthorName" x:Name="ComboBxA" SelectionChanged="ComboBxA_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Page>
